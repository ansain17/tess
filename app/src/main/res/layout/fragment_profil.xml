<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ProfilFragment">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="56dp"
        android:id="@+id/navbar"/>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#921C8C"
        android:id="@+id/nafigation"
        app:menu="@menu/navigation_bar"
        android:layout_alignParentBottom="true"/>

    <LinearLayout
        android:id="@+id/atas"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@drawable/hederprofil"
        android:orientation="horizontal">
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/psb"
        android:gravity="center"
        android:text="Dasbord"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/layar"
        android:layout_below="@+id/atas"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="horizontal">
    </LinearLayout>
    <TextView
        android:id="@+id/namauser"
        android:layout_below="@+id/atas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/psb"
        android:gravity="center"
        android:text="Andhika Syaputra"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold" />

    <ImageView
        android:layout_below="@+id/atas"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/potoprofil" />
    <TextView
        android:layout_below="@+id/namauser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/psb"
        android:gravity="center"
        android:layout_marginRight="20dp"
        android:text="ansain17@gmail.com"
        android:textColor="#66000000"
        android:textSize="15dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_below="@+id/layar"
        android:layout_width="match_parent"
        android:background="@color/black"
        android:layout_height="2dp"/>
    <TextView
        android:id="@+id/perbarui_profile"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/layar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:text="Perbarui Profile"
        android:fontFamily="@font/psb"
        android:textColor="@color/black"
        />
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_below="@+id/perbarui_profile"
        android:layout_width="match_parent"
        android:background="#66000000"
        android:layout_height="2dp"/>
    <TextView
        android:id="@+id/aturan_layanan"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/perbarui_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:text="Aturan Layanan"
        android:fontFamily="@font/psb"
        android:textColor="@color/black"
        />
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_below="@+id/aturan_layanan"
        android:layout_width="match_parent"
        android:background="#66000000"
        android:layout_height="2dp"/>

    <TextView
        android:id="@+id/hubungi_kami"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/aturan_layanan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:text="Hubungi Kami"
        android:fontFamily="@font/psb"
        android:textColor="@color/black"
        />
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_below="@+id/hubungi_kami"
        android:layout_width="match_parent"
        android:background="#66000000"
        android:layout_height="2dp"/>

    <Button
        android:layout_below="@+id/hubungi_kami"
        android:id="@+id/btnlogin"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_marginLeft="120dp"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:backgroundTint="#921C8C"
        android:background="@drawable/cornerlogin"
        android:fontFamily="@font/psb"
        android:textSize="10dp"
        android:text="LOGOUT"
        android:textColor="@color/white"
        android:textStyle="bold" />


</RelativeLayout>