<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".register">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/header"
        android:orientation="horizontal">
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="1.5"
        android:padding="15dp">

        <ImageView
            android:layout_marginTop="50dp"
            android:layout_width="wrap_content"
            android:layout_height="160dp"
            android:src="@drawable/logosignin"/>


    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:padding="15dp"
        android:background="@color/white"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:text="Silahkan Daftar"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:fontFamily="@font/psb"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"/>
        <EditText
            android:id="@+id/ednama"
            android:layout_gravity="center"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/kotak"
            android:drawableStart="@drawable/user"
            android:textColorHint="#66000000"
            android:drawablePadding="10dp"
            android:textSize="12dp"
            android:hint="Masukan Username/Email"
            android:textColor="@color/black"
            android:paddingLeft="10dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="15dp"/>

        <EditText
            android:id="@+id/edusername"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:textSize="12dp"
            android:textColorHint="#66000000"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:background="@drawable/kotak"
            android:drawableStart="@drawable/user"
            android:drawablePadding="10dp"
            android:hint="Nama Username"
            android:paddingLeft="10dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="15dp"/>
        <EditText
            android:id="@+id/edpassword"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:textSize="12dp"
            android:textColorHint="#66000000"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:background="@drawable/kotak"
            android:drawableStart="@drawable/password"
            android:drawablePadding="10dp"
            android:hint="Masukan Password"
            android:inputType="textPassword"
            android:paddingLeft="10dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="15dp"/>

        <EditText
            android:id="@+id/edlevel"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:textSize="12dp"
            android:textColorHint="#66000000"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:background="@drawable/kotak"
            android:drawableStart="@drawable/admin"
            android:drawablePadding="10dp"
            android:hint="level"
            android:paddingLeft="10dp" />
        <Button
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:backgroundTint="#921C8C"
            android:background="@drawable/cornerlogin"
            android:fontFamily="@font/psb"
            android:textSize="10dp"
            android:id="@+id/btnregister"
            android:text="Daftar"
            android:textColor="@color/white"
            android:textStyle="bold" />



    </LinearLayout>



</LinearLayout>