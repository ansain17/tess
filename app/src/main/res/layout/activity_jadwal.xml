<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".jadwal">

    <LinearLayout
        android:id="@+id/jadwaldok"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@drawable/jadwadok"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/logor" />
    </LinearLayout>

    <LinearLayout
        android:scrollbars="vertical"
        android:padding="10dp"
        android:layout_below="@id/jadwaldok"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_marginTop="50dp"
            android:id="@+id/jd1"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:background="@drawable/dk1"/>

        <ImageView
            android:layout_marginTop="20dp"
            android:id="@+id/jd2"
            android:layout_below="@+id/jd1"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:background="@drawable/dk2"/>

        <ImageView
            android:layout_marginTop="20dp"
            android:id="@+id/jd3"
            android:layout_below="@+id/jd2"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:background="@drawable/dk4"/>

    </LinearLayout>










</RelativeLayout>